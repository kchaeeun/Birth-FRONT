<?xml version="1.0" encoding="utf-8"?>
<!--https://android-dev.tistory.com/entry/AndroidKotlin-Spinner-%EC%BB%A4%EC%8A%A4%ED%85%80-%ED%95%B4%EB%B3%B4%EA%B8%B0-1-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SeatFragment">

    <include
            layout="@layout/activity_toolbar"
            android:id="@+id/include" />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/constraintLayout5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                    android:layout_marginTop="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="220dp"
                        android:background="@drawable/entry_seat"
                        android:layout_height="340dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/view">


                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:layout_width="6dp"
                                android:layout_height="25dp"
                                android:background="@drawable/seat_rect"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginTop="26dp"
                                android:id="@+id/imageView2" />

                        <ImageView
                                android:layout_width="6dp"
                                android:layout_height="25dp"
                                android:background="@drawable/seat_rect"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="26dp"
                                app:layout_constraintEnd_toEndOf="parent" />

                        <ImageView
                                android:layout_width="6dp"
                                android:layout_height="25dp"
                                android:background="@drawable/seat_rect"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="26dp" />

                        <ImageView
                                android:layout_width="6dp"
                                android:layout_height="25dp"
                                android:background="@drawable/seat_rect"
                                android:id="@+id/imageView"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="26dp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginStart="20dp"
                                android:id="@+id/constraintLayout9">

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_pink_seat"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:id="@+id/imageView5" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView5"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView6" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView6"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView7" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView7"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView8" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView8"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView9" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_pink_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:id="@+id/imageView10"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView9"
                                    android:layout_marginTop="10dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:id="@+id/seat_layout_2"
                                android:layout_marginEnd="20dp">

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_pink_seat"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:id="@+id/imageView13" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView13"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView14" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView14"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView15" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView15"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView16" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_grey_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView16"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView17" />

                            <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="36dp"
                                    android:background="@drawable/rotate_pink_seat"
                                    app:layout_constraintStart_toStartOf="parent"
                                    android:id="@+id/imageView18"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView17"
                                    android:layout_marginTop="10dp" />

                        </androidx.constraintlayout.widget.ConstraintLayout>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <ImageView
                            android:layout_width="13dp"
                            android:layout_height="183dp"
                            android:background="@drawable/arrow"

                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="15sp"
                        android:textColor="#1e1e1e"
                        app:layout_constraintEnd_toStartOf="@+id/view"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        android:id="@+id/tv_1" />

                <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="15sp"
                        android:textColor="#1e1e1e"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="30dp"
                        app:layout_constraintStart_toEndOf="@+id/view"
                        android:layout_marginStart="15dp" />

                <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="15sp"
                        android:textColor="#1e1e1e"
                        app:layout_constraintEnd_toStartOf="@+id/view"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="30dp" />

                <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/pretendard_regular"
                        android:textSize="15sp"
                        android:textColor="#1e1e1e"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="30dp"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@+id/view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:id="@+id/constraintLayout4"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="300dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/constraintLayout3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    <Spinner
                            android:id="@+id/spinner_1"
                            android:layout_width="145dp"
                            android:textAlignment="center"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_spinner_hoseon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="145dp"
                            android:layout_height="50dp"
                            android:textAlignment="center"
                            android:background="@drawable/bg_spinner_station"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Spinner
                        android:id="@+id/spinner_3"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_spinner_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                <Spinner
                        android:id="@+id/spinner_4"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_spinner_seat"
                        app:layout_constraintTop_toBottomOf="@+id/spinner_3"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="168dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="29dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="83dp"
                        android:layout_height="40dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/constraintLayout6">

                    <ImageView
                            android:id="@+id/img_seat1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/seat_pink"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="빈좌석"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="15sp"
                            android:textColor="#1e1e1e"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/img_seat1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="4dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="83dp"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/constraintLayout6">

                    <ImageView
                            android:id="@+id/img_seat2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/seat_red"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView7"
                            android:layout_marginEnd="4dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="착석"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="15sp"
                            android:textColor="#1e1e1e"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView7" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>